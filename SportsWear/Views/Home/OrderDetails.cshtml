@model IEnumerable<SportsWear.Models.Product>

@{
    ViewData["Title"] = "Index";

}

<h3 class="mb-3">Order Details</h3>

<table class="table bg-white table-bordered table-hover" id="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductQty)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductPrice)$
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductQty)
                </td>

            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="MyOrders" class="btn btn-sm btn-info">Back to My Orders</a>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script>
    $(function () {
        $("#table").DataTable({
            "responsive": true,
            "autoWidth": false,

        });

    });</script>