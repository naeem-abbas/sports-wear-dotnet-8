@model SportsWear.Models.Product

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<br />
<div>
    <!-- /.card -->
    <!-- Horizontal Form -->
    <div class="card card-success w-50">
        <div class="card-header">
            <h3 class="card-title">Edit Product</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form class="form-horizontal" asp-action="Edit" enctype="multipart/form-data">
            <input type="hidden" asp-for="ProductId" />
            <input type="hidden" asp-for="ProductImage" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="card-body">
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Select Category</label>
                    <div class="col-sm-9">
                        <select asp-for="FkCategoryId" class="form-control" asp-items="ViewBag.FkCategoryId"></select>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Product Name</label>
                    <div class="col-sm-9">
                        <input asp-for="ProductName" class="form-control" />
                        <span asp-validation-for="ProductName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Product Price</label>
                    <div class="col-sm-9">
                        <input asp-for="ProductPrice" class="form-control" />
                        <span asp-validation-for="ProductPrice" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Product Qty</label>
                    <div class="col-sm-9">
                        <input asp-for="ProductQty" class="form-control" />
                        <span asp-validation-for="ProductQty" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Product Size</label>
                    <div class="col-sm-9">
                        <input asp-for="ProductSize" class="form-control" />
                        <span asp-validation-for="ProductSize" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Select Gender</label>
                    <div class="col-sm-9">
                        <select asp-for="ProductGender" class="form-control">
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                        </select>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Product Image</label>
                    <div class="col-sm-9">
                        @*<input asp-for="ProductImage" class="form-control" />
                    <span asp-validation-for="ProductImage" class="text-danger"></span>*@
                        <input asp-for="ImageFile" accept="image/*" class="form-control" />
                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Product Desc</label>
                    <div class="col-sm-9">
                        <input asp-for="ProductDesc" class="form-control" />
                        <span asp-validation-for="ProductDesc" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <!-- /.card-body -->
            <div class="card-footer bg-white">
                <button type="submit" class="btn btn-success">Update</button>

                <button asp-action="Index" class="btn btn-info float-right">Back to List</button>
            </div>
            <!-- /.card-footer -->
        </form>
    </div>
    <!-- /.card -->
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
