@model SportsWear.Models.Product

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h3>Details</h3>

<div>
    <h5>Product</h5>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductPrice) $
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductQty)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductQty)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductSize)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductSize)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductImage)
        </dt>
        <dd class="col-sm-10">
            <img src="~/images/uploads/productImages/@Model.ProductImage" style="width:50px;height:50px" />
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductDesc)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductDesc)
        </dd>
        <dt class = "col-sm-2">
            @*@Html.DisplayNameFor(model => model.FkCategory)*@
            Category
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FkCategory.CategoryName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ProductId" class="btn btn-sm btn-primary">Edit</a> |
    <a asp-action="Index" class="btn btn-sm btn-info">Back to List</a>
</div>
