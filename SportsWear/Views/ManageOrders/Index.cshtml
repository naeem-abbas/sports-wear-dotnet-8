@model IEnumerable<SportsWear.Models.Order>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card p-3">
    <h4 class="mb-3 mt-3">Customer Orders</h4>
    <table class="table table-hover  table-bordered" id="table">
        <thead>
            <tr>
                <th style="font-size:14px">
                    @Html.DisplayNameFor(model => model.OrderId)
                </th>
                <th style="font-size:14px">
                    @Html.DisplayNameFor(model => model.TotalPrice)
                </th>
                <th style="font-size:14px">
                    @Html.DisplayNameFor(model => model.OrderDate)
                </th>
                <th style="font-size:14px">
                    @*@Html.DisplayNameFor(model => model.FullName)*@
                    Name
                </th>
                <th style="font-size:14px">
                    @*@Html.DisplayNameFor(model => model.PhoneNumber)*@
                    Phone
                </th>
                <th style="font-size:14px">
                    @Html.DisplayNameFor(model => model.AddressDetail)
                </th>
                <th style="font-size:14px">
                    @Html.DisplayNameFor(model => model.OrderStatus)
                </th>

                <th style="font-size:14px">Edit</th>
                <th style="font-size:14px">Details</th>
                <th style="font-size:14px">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    #@Html.DisplayFor(modelItem => item.OrderId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AddressDetail)
                </td>
                <td>
           
                    @if (item.OrderStatus == 0)
                    {
                        <p>Received</p>
                    }
                    @if (item.OrderStatus == 1)
                    {
                        <p>Processing</p>
                    }
                    @if (item.OrderStatus == 2)
                    {
                        <p>Shipped</p>
                    }
                    @if (item.OrderStatus == 3)
                    {
                        <p>Cancelled</p>
                    }
                    @if (item.OrderStatus == 4)
                    {
                        <p>Completed</p>
                    }
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.OrderId" class="btn btn-sm btn-primary">Edit</a>
                   
                </td>
                <td> <a asp-action="Details" asp-route-id="@item.OrderId" class="btn btn-sm btn-info">Details</a></td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.OrderId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>


<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script>
$(function () {
    $("#table").DataTable({
      "responsive": true,
        "autoWidth": false,
        'columnDefs': [{

            'targets': [7,8,9], /* column index */

            'orderable': false, /* true or false */

        }]
    });

  });</script>